---
interface Props {
  summary?: string | null;
  title?: string;
  model?: string | null;
  showModel?: boolean;
}

const { summary, title = "AI 摘要", model, showModel = false } = Astro.props;

const normalizedSummary = typeof summary === "string" ? summary.trim() : "";
---

{
  normalizedSummary.length > 0 && (
    <section class="ai-summary-card" aria-label="AI 摘要">
      <div class="ai-summary-card__title">
        <i class="icon i-ri-robot-2-line" />
        <span>{title}</span>
      </div>

      <p class="ai-summary-card__content">{normalizedSummary}</p>

      {showModel && model && (
        <div class="ai-summary-card__meta">
          <i class="icon i-ri-cpu-line" />
          <span>{model}</span>
        </div>
      )}
    </section>
  )
}

<style>
  .ai-summary-card {
    margin-top: 1rem;
    margin-bottom: 1rem;
    padding: 0.875rem 1rem;
    border-radius: 0.625rem;
    background: var(--grey-2);
    border: 1px solid var(--grey-3);
  }

  .ai-summary-card__title {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    color: var(--primary-color);
    font-weight: 600;
    margin-bottom: 0.625rem;
  }

  .ai-summary-card__content {
    margin: 0;
    line-height: 1.75;
    color: var(--text-color);
    white-space: pre-wrap;
    word-break: break-word;
  }

  .ai-summary-card__meta {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    margin-top: 0.625rem;
    font-size: 0.75rem;
    color: var(--grey-5);
  }
</style>
