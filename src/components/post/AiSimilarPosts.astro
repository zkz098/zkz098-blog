---
interface SimilarPostItem {
  slug: string;
  title: string;
  score: number;
}

interface Props {
  posts?: SimilarPostItem[];
  minSimilarity?: number;
  title?: string;
}

const {
  posts = [],
  minSimilarity = 0.4,
  title = "AI 推荐 · 相近文章",
} = Astro.props;

const visiblePosts = posts
  .filter(
    (item) => typeof item.score === "number" && item.score >= minSimilarity,
  )
  .sort((a, b) => b.score - a.score);
---

{
  visiblePosts.length > 0 && (
    <section class="ai-similar-posts" aria-label="AI 相近文章推荐">
      <div class="ai-similar-posts__title">
        <i class="icon i-ri-robot-2-line" />
        <span>{title}</span>
      </div>

      <ul class="ai-similar-posts__list">
        {visiblePosts.map((item) => (
          <li class="ai-similar-posts__item">
            <a href={`/posts/${item.slug}/`}>
              <span class="ai-similar-posts__name">{item.title}</span>
              <span class="ai-similar-posts__score">
                相似度 {Math.round(item.score * 100)}%
              </span>
            </a>
          </li>
        ))}
      </ul>
    </section>
  )
}

<style>
  .ai-similar-posts {
    margin-top: 1rem;
    margin-bottom: 1rem;
    padding: 0.875rem 1rem;
    border-radius: 0.625rem;
    background: var(--grey-2);
    border: 1px solid var(--grey-3);
  }

  .ai-similar-posts__title {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    color: var(--primary-color);
    font-weight: 600;
    margin-bottom: 0.625rem;
  }

  .ai-similar-posts__list {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .ai-similar-posts__item + .ai-similar-posts__item {
    margin-top: 0.375rem;
  }

  .ai-similar-posts__item a {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
    text-decoration: none;
    border-radius: 0.375rem;
    padding: 0.375rem 0.5rem;
    color: var(--text-color);
    transition: background-color 0.25s ease;
  }

  .ai-similar-posts__item a:hover {
    background-color: var(--color-red-a1);
  }

  .ai-similar-posts__name {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .ai-similar-posts__score {
    font-size: 0.75rem;
    color: var(--grey-5);
    white-space: nowrap;
  }
</style>
