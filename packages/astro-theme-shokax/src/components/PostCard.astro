---
import type { CollectionEntry } from 'astro:content'

interface Props {
  post: CollectionEntry<'posts'>
}

const { post } = Astro.props
const postUrl = `/posts/${post.id}`
const publicDescription = post.data.description || post.body?.substring(0, 300) || ''
const lastCategory = post.data.categories?.[post.data.categories.length - 1]
---

<article class="post-card">
  <div class="cover">
    {
      post.data.cover && (
        <img src={post.data.cover} alt={post.data.title} loading="lazy" decoding="async" class="cover-image" />
      )
    }
    <div class="cover-overlay"></div>
  </div>

  <div class="info">
    <div class="meta-top">
      <span class="date">
        <i class="i-ri-calendar-line"></i>
        {post.data.date.toLocaleDateString()}
      </span>
    </div>

    <h3 class="title">
      <a href={postUrl} title={post.data.title}>
        {post.data.title}
      </a>
    </h3>

    <div class="excerpt">
      {publicDescription}
    </div>

    {
      lastCategory && (
        <div class="meta-bottom">
          <span class="category">
            <i class="i-ri-folder-line" />
            {lastCategory}
          </span>
        </div>
      )
    }

    <a href={postUrl} class="read-more-btn"> Read More </a>
  </div>
</article>

<style>
  .post-card {
    position: relative;
    color: inherit;
    width: calc(50% - 1rem);
    min-width: calc(50% - 1rem);
    height: 14rem;
    border-radius: 0.375rem;
    overflow: hidden;
    background: var(--grey-0);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    animation: slideUpBigIn 0.6s ease-out forwards;
    opacity: 0;
  }

  .post-card:hover {
    transform: translateY(-0.25rem);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
  }

  @keyframes slideUpBigIn {
    from {
      opacity: 0;
      transform: translateY(2rem);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .post-card {
      width: calc(100% - 1rem) !important;
      min-width: calc(100% - 1rem) !important;
    }
  }

  .cover {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--grey-2);
    background-position: center;
    background-size: cover;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .cover-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cover-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(67, 67, 67, 0.3), rgba(0, 0, 0, 0.3));
    z-index: 1;
  }

  .info {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--grey-0);
    padding: 1rem 1.5rem 4rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    border-radius: 0.375rem;
  }

  .meta-top {
    font-size: 0.875rem;
    color: var(--grey-5);
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .date {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .date i {
    font-size: 0.75rem;
  }

  .title {
    margin: 0.5rem 0;
    font-size: 1.125rem;
    font-weight: 600;
    line-height: 1.4;
    color: inherit;
  }

  .title a {
    text-decoration: none;
    color: inherit;
    transition: color 0.3s;
  }

  .title a:hover {
    color: var(--color-pink);
  }

  .excerpt {
    font-size: 0.9375rem;
    color: var(--grey-6);
    line-height: 1.5;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin: 0.5rem 0;
    flex-grow: 1;
  }

  .meta-bottom {
    position: absolute;
    bottom: 3.5rem;
    left: 1.5rem;
    right: 1.5rem;
    font-size: 0.875rem;
    color: var(--grey-5);
    max-width: calc(100% - 3rem);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .category {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .category i {
    font-size: 0.75rem;
  }

  .read-more-btn {
    position: absolute;
    bottom: 0;
    right: 0;
    padding: 0.3rem 1rem;
    border-radius: 1rem 0;
    color: var(--grey-0);
    background: linear-gradient(to right, var(--color-pink), var(--color-orange));
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 2rem;
    z-index: 2;
  }

  .read-more-btn:hover {
    transform: scale(1.05);
  }
</style>
